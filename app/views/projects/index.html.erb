<h1>Projects</h1>

<table border=1>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><h2><%= project.title %></h2></td>
        <td><%= project.tasks.count %> tasks</td>

        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Really?' } %></td>
      </tr>

      <th>Tasks</th>
      <th><%= link_to 'New Task', new_project_task_path(project) %></th>

      <tr>
        <th>Title</th>
        <th>Deadline</th>
        <th>Done</th>
        <th colspan="3"></th>
      </tr>

      <% project.tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.deadline %></td>
          <td><%= task.done %></td>

          <td><%= link_to 'Edit', edit_project_task_path(id: task, project_id: task.project.id) %></td>
          <td><%= link_to 'Destroy', project_task_path(id: task, project_id: task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
